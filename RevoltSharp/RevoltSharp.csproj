<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
	  <ImplicitUsings>disable</ImplicitUsings>
    <Version>7.7.1</Version>
    <Authors>Builderb (Fluxpoint Development)</Authors>
    <Company>Fluxpoint Development</Company>
    <Description>A C# lib for using the revolt chat API and connecting to the gateway with a user or bot account.</Description>
    <Product>RevoltSharp</Product>
    <PackageProjectUrl>https://docs.fluxpoint.dev/revoltsharp</PackageProjectUrl>
    <RepositoryUrl>https://github.com/FluxpointDev/RevoltSharp</RepositoryUrl>
    <PackageTags>revolt, revolt bot, bot, revoltsharp, revolt c#</PackageTags>
    <PackageReleaseNotes>See changelog https://docs.fluxpoint.dev/revoltsharp/changelog</PackageReleaseNotes>
    <Nullable>enable</Nullable>
    <PackageIcon>PackageIcon.png</PackageIcon>

    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <DocumentationFile>RevoltSharp.xml</DocumentationFile>
  </PropertyGroup>
  
  <ItemGroup>
    <None Include="..\.editorconfig" Link=".editorconfig" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <ItemGroup>
    <None Update="PackageIcon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
